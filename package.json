{
  "private": true,
  "name": "munchkin",
  "version": "15.7.1",
  "type": "module",
  "packageManager": "yarn@4.5.3",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "prettier --cache --ignore-unknown --write .",
    "get-version": "node --no-warnings scripts/version.js",
    "lint": "yarn lint-unused && yarn lint-types && yarn lint-js && yarn lint-circular && yarn lint-css",
    "lint-circular": "madge --circular packages/cordova/src/index.ts packages/site/app packages/web/src/index.tsx",
    "lint-css": "stylelint --cache \"**/*.css\"",
    "lint-js": "NODE_OPTIONS=\"--max-old-space-size=4096\" eslint --cache \"**/*.{js,ts,tsx}\"",
    "lint-types": "tsc",
    "lint-unused": "knip --cache",
    "postinstall": "husky || true",
    "reinstall": "rm -r node_modules yarn.lock && yarn install"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.0",
    "@commitlint/config-conventional": "19.6.0",
    "@eslint/js": "9.16.0",
    "@eslint/json": "0.9.0",
    "@next/eslint-plugin-next": "15.1.0",
    "@semantic-release/commit-analyzer": "13.0.0",
    "@semantic-release/github": "11.0.1",
    "@semantic-release/release-notes-generator": "14.0.1",
    "@types/node": "22.10.2",
    "conventional-changelog-conventionalcommits": "8.0.0",
    "eslint": "9.16.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.7.0",
    "eslint-plugin-compat": "6.0.2",
    "eslint-plugin-formatjs": "5.2.8",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "28.9.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-only-error": "1.0.2",
    "eslint-plugin-perfectionist": "4.3.0",
    "eslint-plugin-react": "7.37.2",
    "eslint-plugin-react-hooks": "5.1.0",
    "eslint-plugin-unicorn": "56.0.1",
    "globals": "15.13.0",
    "husky": "9.1.7",
    "knip": "5.40.0",
    "lint-staged": "15.2.11",
    "madge": "8.0.0",
    "prettier": "3.4.2",
    "process": "0.11.10",
    "semantic-release": "24.2.0",
    "stylelint": "16.11.0",
    "stylelint-config-standard": "36.0.1",
    "stylelint-order": "6.0.4",
    "typescript": "5.7.2",
    "typescript-eslint": "8.18.0"
  },
  "alias": {
    "@formatjs/icu-messageformat-parser": "@formatjs/icu-messageformat-parser/no-parser"
  }
}
