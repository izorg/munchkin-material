{
  "private": true,
  "name": "munchkin",
  "version": "15.6.1",
  "type": "module",
  "packageManager": "yarn@4.5.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "prettier --cache --ignore-unknown --write .",
    "get-version": "node --no-warnings scripts/version.js",
    "lint": "yarn lint-unused && yarn lint-types && yarn lint-js && yarn lint-circular && yarn lint-css",
    "lint-circular": "madge --circular packages/cordova/src/index.ts packages/site/app packages/web/src/index.tsx",
    "lint-css": "stylelint --cache \"**/*.css\"",
    "lint-js": "NODE_OPTIONS=\"--max-old-space-size=4096\" eslint --cache \"**/*.{js,ts,tsx}\"",
    "lint-types": "tsc",
    "lint-unused": "knip --cache",
    "postinstall": "husky || true",
    "reinstall": "rm -r node_modules yarn.lock && yarn install"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@eslint/compat": "1.2.3",
    "@eslint/js": "9.14.0",
    "@eslint/json": "0.6.0",
    "@next/eslint-plugin-next": "15.0.3",
    "@semantic-release/commit-analyzer": "13.0.0",
    "@semantic-release/github": "11.0.1",
    "@semantic-release/release-notes-generator": "14.0.1",
    "conventional-changelog-conventionalcommits": "8.0.0",
    "eslint": "9.14.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.3",
    "eslint-plugin-compat": "6.0.1",
    "eslint-plugin-formatjs": "5.2.2",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "28.9.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-only-error": "1.0.2",
    "eslint-plugin-perfectionist": "3.9.1",
    "eslint-plugin-react": "7.37.2",
    "eslint-plugin-react-hooks": "5.0.0",
    "eslint-plugin-sonarjs": "2.0.4",
    "eslint-plugin-unicorn": "56.0.0",
    "globals": "15.12.0",
    "husky": "9.1.6",
    "knip": "5.37.0",
    "lint-staged": "15.2.10",
    "madge": "8.0.0",
    "prettier": "3.3.3",
    "process": "0.11.10",
    "semantic-release": "24.2.0",
    "stylelint": "16.10.0",
    "stylelint-config-standard": "36.0.1",
    "stylelint-order": "6.0.4",
    "typescript": "5.6.3",
    "typescript-eslint": "8.14.0"
  }
}
