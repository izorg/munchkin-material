{
  "$schema": "node_modules/knip/schema.json",
  "ignoreFiles": [".yarn/**"],
  "ignoreDependencies": [
    "@parcel/*",
    "@semantic-release/*",
    "@types/parcel-env",
    "babel-preset-web",
    "conventional-changelog-conventionalcommits",
    "cordova-*",
    "semantic-release"
  ],
  "workspaces": {
    "packages/babel-preset-web": {
      "babel": {
        "config": ["index.js"]
      }
    },
    "packages/cordova": {
      "entry": ["src/index.ts", "scripts/copy-gradle-extras.js"]
    },
    "packages/web": {
      "ignore": ["src/components/SettingsList/TranslateItem/index.tsx"]
    }
  }
}
