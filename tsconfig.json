{
  "compilerOptions": {
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "verbatimModuleSyntax": true
  },
  "exclude": [
    "cordova/platforms",
    "cordova/plugins",
    "cordova/www",
    "node_modules",
    "web/dist"
  ]
}
