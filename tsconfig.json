{
  "compilerOptions": {
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "verbatimModuleSyntax": true
  },
  "exclude": [
    "node_modules",
    "packages/cordova/platforms",
    "packages/cordova/plugins",
    "packages/cordova/www",
    "packages/web/dist"
  ],
  "ts-node": {
    "swc": true
  }
}
