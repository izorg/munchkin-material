<!doctype html>
<html dir="{{dir}}" lang="{{lang}}">
  <head>
    <title>{{title}}</title>

    <meta charset="utf-8" />
    <meta name="google" content="notranslate" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <meta
      name="viewport"
      content="initial-scale=1, minimum-scale=1, shrink-to-fit=no, viewport-fit=cover, width=device-width"
    />

    <meta
      name="description"
      content="Simple but powerful Level Counter for Munchkin"
    />
    <meta name="color-scheme" content="light dark" />

    <link
      as="font"
      crossorigin
      href="{{root}}fonts/munchkin.woff2"
      rel="preload"
      type="font/woff2"
    />

    <link rel="manifest" href="manifest.webmanifest" />

    <link rel="shortcut icon" href="{{root}}images/favicon.png" />

    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="{{root}}images/icon-180x180.png"
    />

    <link
      rel="apple-touch-startup-image"
      media="(device-width: 320px) and (device-height: 568px) and (-webkit-device-pixel-ratio: 2) and (orientation: portrait)"
      href="{{root}}images/launch-640x1136.png"
    />
    <link
      rel="apple-touch-startup-image"
      media="(device-width: 320px) and (device-height: 568px) and (-webkit-device-pixel-ratio: 2) and (orientation: landscape)"
      href="{{root}}images/launch-1136x640.png"
    />
    <link
      rel="apple-touch-startup-image"
      media="(device-width: 375px) and (device-height: 667px) and (-webkit-device-pixel-ratio: 2) and (orientation: portrait)"
      href="{{root}}images/launch-750x1334.png"
    />
    <link
      rel="apple-touch-startup-image"
      media="(device-width: 375px) and (device-height: 667px) and (-webkit-device-pixel-ratio: 2) and (orientation: landscape)"
      href="{{root}}images/launch-1334x750.png"
    />
    <link
      rel="apple-touch-startup-image"
      media="(device-width: 414px) and (device-height: 736px) and (-webkit-device-pixel-ratio: 3) and (orientation: portrait)"
      href="{{root}}images/launch-1242x2208.png"
    />
    <link
      rel="apple-touch-startup-image"
      media="(device-width: 414px) and (device-height: 736px) and (-webkit-device-pixel-ratio: 3) and (orientation: landscape)"
      href="{{root}}images/launch-2208x1242.png"
    />

    <link rel="stylesheet" href="{{root}}global.css" />
  </head>
  <body>
    <noscript>No JavaScript no app</noscript>
    <div id="root"></div>
    <script src="{{root}}index.tsx" type="module"></script>
  </body>
</html>
