{
  "private": true,
  "name": "@munchkin/pwa",
  "type": "module",
  "targets": {
    "default": {
      "distDir": "dist",
      "source": [
        "../web/src/index.html",
        "../web/src/localized-files/*/index.html"
      ]
    }
  },
  "scripts": {
    "build": "yarn build:parcel && yarn build:workbox",
    "build:parcel": "parcel build",
    "build:workbox": "workbox generateSW workbox.config.json",
    "dev": "parcel --port=3000"
  },
  "devDependencies": {
    "parcel": "2.15.4",
    "workbox-cli": "7.3.0"
  }
}
